# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             controllers.Application.index(mute:Boolean = false)
GET        /mute                         controllers.Application.index(mute:Boolean = true)
GET        /sjs                          controllers.Application.sjs()
GET        /client/*file                 controllers.Application.sjsClient(file)



# Player!
GET        /data/randomSong              controllers.Player.randomSong
GET        /data/albums/*path            controllers.Player.album(path)
GET        /data/songs/*path             controllers.Player.song(path)
GET        /data/nextSong                controllers.Player.nextSong(path)
# Streamer
GET        /stream/download/*path        controllers.Streamer.download(path)
GET        /stream/play/*path            controllers.Streamer.playSong(path)
# Posters
GET        /posters/display/*path        controllers.Posters.displayImage(path)
GET        /posters/*path                controllers.Posters.image(path)
# Lyrics
GET        /lyrics/*path                 controllers.Lyrics.get(path)
# External
GET        /external/*path               controllers.External.get(path)
POST       /external/recons/*path        controllers.External.updateRecon(path)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.at(path="/public", file)
GET        /client/*file                 controllers.Assets.at(path="/client/scala-2.11/", file)
GET        /js/*file                     controllers.Assets.at(path="/public/javascripts", file)
# Flac
GET        /flac/raw                     controllers.Flac.raw
GET        /flac/play                    controllers.Flac.foobar

# Searcher
GET        /search/*path                 controllers.Searcher.search(path)

# Web sockets
GET        /ws/console                   websockets.ConsoleSocket.accept
GET        /ws/refresh                   controllers.Cacher.accept
GET        /ws/newFolder                 websockets.NewFolderSocket.accept

# Playlist
GET         /playlist/queue              controllers.Playlist.getQueue
POST        /playlist/queue              controllers.Playlist.setQueue()
GET         /playlist/state              controllers.Playlist.getState
POST        /playlist/state              controllers.Playlist.setState()

# Debug
GET        /debug/slow_refresh           controllers.Cacher.forceRefresh()
GET        /debug/fast_refresh           controllers.Cacher.quickRefresh()
