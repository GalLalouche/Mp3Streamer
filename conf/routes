# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                        controllers.Application.index(mute:Boolean = false)
GET    /mute                    controllers.Application.index(mute:Boolean = true)
GET    /test                    controllers.Application.test      


#Player!     
GET    /music/randomSong        controllers.Player.randomSong
GET    /music/albums/*path      controllers.Player.album(path)
#Streamer
GET    /music/songs/*path       controllers.Streamer.download(path)
GET    /play/*path              controllers.Streamer.playSong(path)
# Posters
GET    /posters/display/*path   controllers.Posters.displayImage(path)
GET    /posters/*path           controllers.Posters.image(path)

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file            controllers.Assets.at(path="/public", file)

#tree
GET    /music/tree              websockets.TreeSocket.tree
# Searcher
GET    /music/search/*path		controllers.Searcher.search(path)

# Web sockets
GET    /ws/tree                 websockets.TreeSocket.accept
GET    /ws/console              websockets.ConsoleSocket.accept
GET    /ws/newFolder            websockets.NewFolderSocket.accept

#Acra
POST   /acra                    controllers.Acra.post